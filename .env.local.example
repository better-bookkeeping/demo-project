# OpenBao Vault Configuration
OPENBAO_ADDR=https://vault.your-domain.com
OPENBAO_ROLE_ID=your_vault_role_id
OPENBAO_SECRET_ID=your_vault_secret_id
OPENBAO_ENVIRONMENT=test

# Github token for installing the private packages in the docker container
GITHUB_TOKEN="your_github_personal_access_token"

# ==============================================================================
# Below are overrides for local development. You can comment them out of your
# own .env.local file if you want to connect to the test environment.
# ==============================================================================

# Auth0 Authentication
AUTH0_CLIENT_SECRET="your_auth0_client_secret"
VITE_AUTH0_CLIENT_ID="your_auth0_client_id"
VITE_AUTH0_DOMAIN="your-tenant.auth0.com"
VITE_AUTH0_REDIRECT_URI="http://localhost:3200/auth/callback"

# Document Parser Service
VITE_DOCUMENT_PARSER_API_URL="https://api.document-parser.your-domain.com"
DOCUMENT_PARSER_API_KEY="your_document_parser_api_key"
DOCUMENT_PARSER_WEBHOOK_SECRET="your_document_parser_webhook_secret"

# Plaid Integration
VITE_PLAID_CLIENT_ID="your_plaid_client_id"
PLAID_ACCESS_TOKEN="your_plaid_access_token"
PLAID_WEBHOOK_URL="your_plaid_webhook_url"

# Database Configuration
DATABASE_URL="postgresql://username:password@host:5432/database_name"

# Google Drive Integration
DRIVE_CLIENT_FILES_FOLDER_ID="your_drive_folder_id"

# Development Configuration
# Don't enable in production!!! This is to accept self-signed certificates in development
NODE_TLS_REJECT_UNAUTHORIZED=0
